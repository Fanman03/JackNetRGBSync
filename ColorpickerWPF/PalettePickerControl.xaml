<UserControl x:Class="ColorPickerWPF.Controls.PalettePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorPickerWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
        <TextBox x:Name="ColorBox" Margin="0,0,0,0" Style="{StaticResource TextBoxRevealStyle}" Width="100" TextChanged="ColorBox_OnChanged" Loaded="ColorBox_OnLoaded" BorderThickness="0"></TextBox>
        <Button x:Name="ColorIcon" Width="35" Style="{StaticResource ButtonRevealStyle}" FontSize="16" FontFamily="Segoe MDL2 Assets" Click="EditBtn_OnClick" BorderThickness="0">
            <TextBlock x:Name="PenIcon" Text="&#xE104;"/>
        </Button>
    </StackPanel>

</UserControl>