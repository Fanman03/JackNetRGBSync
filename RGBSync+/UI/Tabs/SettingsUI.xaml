<UserControl x:Class="RGBSyncPlus.UI.Tabs.SettingsUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RGBSyncPlus.UI.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:SettingsUIViewModel/>
    </UserControl.DataContext>
    <StackPanel>
    <StackPanel Orientation="Horizontal">
            <Label Width="120" HorizontalAlignment="Right" HorizontalContentAlignment="Right" FontFamily="Segoe UI" FontSize="24" Foreground="White">API Server</Label>
        <CheckBox VerticalAlignment="Center" Margin="10,0" Foreground="White" BorderBrush="White" VerticalContentAlignment="Center" IsChecked="{Binding NGSettings.ApiEnabled}"></CheckBox>
            <Label HorizontalContentAlignment="Right" FontFamily="Segoe UI" FontSize="12" Foreground="White" VerticalAlignment="Center">Enable this to enable the RGB Sync Studio REST API server</Label>
        <Label></Label>
    </StackPanel>
</StackPanel>
</UserControl>
